<%= render 'list', user: @user, book: @book_new  %>


<div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  	<td><%= image_tag @book.user.get_profile_image(100,100) %><br>
  	    <%= link_to @book.user.name ,user_path(@book.user.id) %></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user.id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path(@book.id) ,class: "btn btn-sm btn-success" %></td>
    <td><%= link_to "Destroy",book_path(@book.id), method: :delete ,class: "btn btn-sm btn-danger" ,"data-confirm" => "本当に削除しますか？" %></td>      
    <% end %>      
        
    
      </tbody>
      </table>
    </div>
    </div>
</div>
